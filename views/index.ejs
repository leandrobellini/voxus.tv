<!-- =================== Header =================== -->
<%  include ./partials/header %>
<!-- =================== /Header =================== -->


<div class="container top-margin">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <% for(i=0; i < tasks.length; i++){ %>
                <ul class="list-group">
                    <li class="list-group-item task-item"> 
                        <a href="/tasks/<%= i %>"><%= tasks[i].nome %> </a>
                        <div class="float-right">
                            <a href="/tasks/<%= i %>" class="btn btn-info btn-sm ">Detalhes</a>
                            <a href="/tasks/edit/<%= i %>" class="btn btn-secondary btn-sm">Editar</a>
                            <a href="/tasks/delete/<%= i %>" class="btn btn-warning btn-sm">Deletar</a>
                        </div>
                    </li>
                </ul>
            <% }; %>
        </div>
    </div>
</div>


<!-- =================== Footer =================== -->
<% include ./partials/footer %>
<!-- =================== /Footer =================== -->