<!-- =================== Header =================== -->
<%  include ./partials/header %>
<!-- =================== /Header =================== -->


<div class="container top-margin">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <% if(task == -1){ %>
                <b>Task inválida!</b>
            <% }else{ %>
                
                <form method="POST" action="/tasks/<%= id %>?_method=PUT">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Nome</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="nome" value="<%= task.nome %>">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Descrição</label>
                        <div class="col-sm-10">
                                <textarea class="form-control" rows="4" name="descricao"><%= task.descricao %></textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Prioridade</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="prioridade">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                                <option>5</option>
                            </select>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-sm">Salvar</button>
                    <a href="/" class="btn btn-warning btn-sm">Voltar</a>
                </form>
            <% }%>
        </div>
    </div>
</div>


<!-- =================== Footer =================== -->
<% include ./partials/footer %>
<!-- =================== /Footer =================== -->